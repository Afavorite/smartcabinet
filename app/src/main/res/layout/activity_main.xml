<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tab_menu_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_home"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/tab_menu_text_home"
            android:textColor="@drawable/tab_menu_text"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_menu_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawableTop="@drawable/tab_menu_add"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="@string/tab_menu_text_add"
            android:textColor="@drawable/tab_menu_text"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_menu_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_mine"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/tab_menu_text_mine"
            android:textColor="@drawable/tab_menu_text"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@+id/tab_bar"
        android:background="@color/gray"/>

    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/div_tab_bar">

    </FrameLayout>

</RelativeLayout>