<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="97dp"
        android:id="@+id/reg_name"
        android:text="新建账号:"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="114dp" />

    <EditText
        android:id="@+id/reg_stu_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_name"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_toEndOf="@+id/reg_name"
        android:layout_toRightOf="@+id/reg_name"
        android:background="@null"
        android:hint="输入学号"
        android:inputType="number"
        android:textSize="24sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:id="@+id/reg_password"
        android:layout_below="@+id/reg_name"
        android:text="新建密码:"
        android:textSize="24sp"
        android:layout_marginTop="14dp" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/reg_stu_password"
        android:layout_below="@+id/reg_stu_id"
        android:textSize="24sp"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:background="@null"
        android:layout_toRightOf="@+id/reg_password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:id="@+id/reg_confirm_password"
        android:layout_below="@+id/reg_password"
        android:text="确认密码:"
        android:textSize="24sp"
        android:layout_marginTop="14dp" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/reg_stu_confirm_password"
        android:layout_below="@+id/reg_stu_password"
        android:textSize="24sp"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:background="@null"
        android:layout_toRightOf="@+id/reg_confirm_password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_password"
        android:layout_alignStart="@+id/reg_password"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="注册" />
</RelativeLayout>
