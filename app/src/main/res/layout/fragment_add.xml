<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="管理您的订单"
        android:textSize="20dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_goto_addorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_goto_addorder"
            android:layout_marginHorizontal="20dp"
            android:padding="12dp"/>
        <Button
            android:id="@+id/btn_goto_showorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_goto_showorder"
            android:layout_marginHorizontal="20dp"
            android:padding="12dp"/>
        <Button
            android:id="@+id/btn_goto_delorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_goto_delorder"
            android:layout_marginHorizontal="20dp"
            android:padding="12dp"/>
    </LinearLayout>


</LinearLayout>